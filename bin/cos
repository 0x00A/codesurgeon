#!/usr/bin/env node

//
// check to ensure that the program has been installed.
//
require('fs').stat('node_modules', function(err) {
  err === null ? main() : console.log('run `npm install`');
});

//
// the main entry point for the application.
//
function main() {

  //
  // print out the program information.
  //
  require('pkginfo')(module);
  console.log(exports.name, 'v' + exports.version);

  //
  // appreaciate any potentially piped input to the program.
  //
  if(require('tty').isatty(0)) {
    console.log('a');
  }
  else {
    console.log('b');
  }
  
}
